extends layout

block content
  h1= device_label

  div.nav_prev
    span.nav_arrow &#9664; 
    a(href=dateformat(prev_month, "yyyy-mm"))= dateformat(prev_month, "mmmm yyyy")

  div.nav_next
    a(href=dateformat(next_month, "yyyy-mm"))= dateformat(next_month, "mmmm yyyy")
    span.nav_arrow  &#9654;

  div.nav_center= dateformat(date, "mmmm yyyy")

  table.calendar_month

    tr
      th Mon
      th Tue
      th Wed
      th Thu
      th Fri
      th Sat
      th Sun

    each row in calendar
      tr
        each day in row
          if day == undefined
            td.invalid
          else
            td
              div.label= dateformat(day, "dd")
              if thumbnails[dateformat(day, "yyyy-mm-dd")]
                a(href=dateformat(day, 'yyyy-mm-dd'))
                  img(width=125 height=75 src=thumbnails[dateformat(day, "yyyy-mm-dd")])
              else
                div.no_data
              div.download
                span.csv
                  a(href="../data.csv?day=#{dateformat(day, 'yyyymmdd')}") CSV

