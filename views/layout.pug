doctype html
html
  head
    title= title
    link(rel='stylesheet', href=`${config.webPath}/stylesheets/fonts.css`)
    link(rel="apple-touch-icon", sizes="180x180", href=`${config.webPath}/apple-touch-icon.png`)
    link(rel="icon", type="image/png", sizes="32x32", href=`${config.webPath}/favicon-32x32.png`)
    link(rel="icon", type="image/png", sizes="16x16", href=`${config.webPath}/favicon-16x16.png`)
    link(rel="manifest", href=`${config.webPath}/manifest.json`)
    meta(name="theme-color", content="#ffffff")
    link(rel='stylesheet', href=`${config.webPath}/stylesheets/style.css`)
    script(type="text/ecmascript", src="//code.jquery.com/jquery-1.12.4.js")
    script(type="text/ecmascript", src=`${config.webPath}/javascripts/d3.v3.min.js`)
    script(type="text/ecmascript", src=`${config.webPath}/socket.io/socket.io.js`)
    script(type="text/ecmascript", src=`${config.webPath}/javascripts/process_data.js`)
    block head
  body
    div.outer_page
      div.page
        div.header
          h1.page_title DataBroker

          ol.breadcrumbs
            each breadcrumb in breadcrumbs
              li
                if breadcrumb['uri']
                  a(href=breadcrumb['uri']) #{breadcrumb['label']}
                else
                  span #{breadcrumb['label']}

        block content
